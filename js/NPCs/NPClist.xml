	<NPC>
		<name>Female Villager</name>
		<xpos>100</xpos>
		<ypos>0</ypos>
		<main_texture>femalevillager.png</main_texture>
		<interact_texture>femalevillager.png</interact_texture>
		<scale>0.2</scale>
		<dialogue>
			<intro>The men keep talking of a coming separation. Will my son have to go and fight?</intro>
		</dialogue>
	</NPC>
	<NPC>
		<name>Female NPC2</name>
		<xpos>400</xpos>
		<ypos>0</ypos>
		<main_texture>femalevillager2.png</main_texture>
		<interact_texture>femalevillager2.png</interact_texture>
